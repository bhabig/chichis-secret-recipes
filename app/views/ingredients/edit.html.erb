<%= form_for @ingredient do |f| %>
  <%= f.label "NAME:" %>
  <%= f.text_field :name %>
  </br>
  <%= f.label "ALLERGEN WARNING?:" %>
  <%= f.check_box :allergen_warning %>
  </br>
  <%= f.label "SPICE LEVEL:" %>
  <%= f.select :spice_level, (0..10), include_blank: true %>
  </br>
  <%= f.label "TYPE:" %>
  <%= f.select :ingredient_type, (1..3), include_blank: true %>
  </br>
  <%= f.submit %>
<% end %>
