<%= render 'layouts/title-header' %>
<div class="not-signed-in-header">
  <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
  <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
  <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
  <h2>SIGN IN BELOW</h2>
  <%= form_for @user, url: sessions_path do |f| %>
    <%= f.label "EMAIL:" %>
    <%= f.text_field :email %>
    </br>
    <%= f.label "PASSWORD:" %>
    <%= f.password_field :password %>
    </br>
    <%= f.submit "SIGN IN" %>
  <% end %>
  <h4 style="color:rgba(225, 225, 225, 0.95);"><strong>OR<strong></h4>
  <%= link_to "SIGN UP", new_user_path, class: "registration1" %>
</div>
